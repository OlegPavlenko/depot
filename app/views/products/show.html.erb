<main>
  <section class="products">
    <article class="product-item show clearfix">
      <%= image_tag(@product.image_url, class: 'list_image') %>
      <h2><%= @product.title %></h2>
      <p><%= @product.description %></p>
      <p>
        <strong>Price:</strong>
        <%= @product.price %>
      </p>
    </article>
  </section>
  <%= link_to 'Back', products_path %>
  <%= link_to 'Edit', edit_product_path(@product) %>
</main>
